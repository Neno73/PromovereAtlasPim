# Server
HOST=0.0.0.0
PORT=1337
NODE_ENV=development

# Strapi Security Keys (generate with: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))")
APP_KEYS=toBeModified1,toBeModified2
API_TOKEN_SALT=toBeModified
ADMIN_JWT_SECRET=toBeModified
TRANSFER_TOKEN_SALT=toBeModified
JWT_SECRET=toBeModified

# Database (Coolify PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_URL=postgres://postgres:password@your-server:5432/postgres?sslmode=require
DATABASE_HOST=your-server
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password
DATABASE_SSL=true
DATABASE_SCHEMA=public

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=data-vault
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Cloudflare AutoRAG Integration
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token
CLOUDFLARE_RAG_NAME=your_rag_name
MALFINI_R2_ACCESS_KEY_ID=your_access_key
MALFINI_R2_SECRET_ACCESS_KEY=your_secret_key

# Promidata Integration
PROMIDATA_BASE_URL=https://promi-dl.de/Profiles/Live/your-profile-id

# Redis Configuration
# DEVELOPMENT: Use local Docker Redis
# Run: docker run -d --name promoatlas-redis -p 6380:6379 redis:alpine
REDIS_URL=redis://localhost:6380/0

# PRODUCTION: Use remote Redis on your server
# REDIS_URL=redis://default:password@your-server:6379

# BullMQ Queue Configuration
BULLMQ_CONCURRENCY_FAMILIES=3
BULLMQ_CONCURRENCY_IMAGES=10
BULLMQ_CONCURRENCY_MEILISEARCH=5
BULLMQ_CONCURRENCY_GEMINI=5
BULLMQ_JOB_TIMEOUT_SUPPLIER=1800000
BULLMQ_JOB_TIMEOUT_FAMILY=300000
BULLMQ_JOB_TIMEOUT_IMAGE=120000
BULLMQ_JOB_TIMEOUT_MEILISEARCH=30000
BULLMQ_JOB_TIMEOUT_GEMINI=120000

# Meilisearch Configuration
MEILISEARCH_HOST=https://your-meilisearch-host.com
MEILISEARCH_ADMIN_KEY=your_admin_key
MEILISEARCH_SEARCH_KEY=your_search_key
MEILISEARCH_INDEX_NAME=pim_products

# Google Gemini File Search (RAG)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_PROJECT_NUMBER=your_project_number
GEMINI_API_KEY=your_gemini_api_key
GEMINI_FILE_SEARCH_STORE_NAME=your_store_name
