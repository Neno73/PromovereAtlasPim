# Server
HOST=0.0.0.0
PORT=1337
APP_KEYS=toBeModified1,toBeModified2
API_TOKEN_SALT=toBeModified
ADMIN_JWT_SECRET=toBeModified
TRANSFER_TOKEN_SALT=toBeModified
JWT_SECRET=toBeModified

# Database (Neon PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_URL=postgresql://user:pass@neon.tech/db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=promo_atlas
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_SSL=true
DATABASE_SCHEMA=public

# IMPORTANT: For Neon PostgreSQL, rejectUnauthorized MUST be false in config/database.ts
# This is already configured correctly - do not change it!

# Cloudflare R2
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=promo-atlas-images
R2_PUBLIC_URL=https://images.promovere.me
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Promidata
PROMIDATA_BASE_URL=https://promi-dl.de/Profiles/Live/849c892e-b443-4f49-be3a-61a351cbdd23

# Redis (Upstash) - Required for BullMQ queues
REDIS_URL=rediss://default:password@your-redis.upstash.io:6379
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token

# BullMQ Queue Configuration (Optional - defaults provided)
BULLMQ_CONCURRENCY_FAMILIES=3
BULLMQ_CONCURRENCY_IMAGES=10
BULLMQ_JOB_TIMEOUT_SUPPLIER=1800000
BULLMQ_JOB_TIMEOUT_FAMILY=300000
BULLMQ_JOB_TIMEOUT_IMAGE=120000

# Environment
NODE_ENV=development
