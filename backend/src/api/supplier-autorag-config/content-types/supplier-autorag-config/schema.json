{
  "kind": "collectionType",
  "collectionName": "supplier_autorag_configs",
  "info": {
    "singularName": "supplier-autorag-config",
    "pluralName": "supplier-autorag-configs",
    "displayName": "Supplier AutoRAG Configuration",
    "description": "Configuration for CloudFlare AutoRAG instances per supplier"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "supplier": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::supplier.supplier",
      "inversedBy": "autorag_config"
    },
    "autorag_id": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1,
      "maxLength": 100,
      "regex": "^[a-z0-9-]+$"
    },
    "cloudflare_account_id": {
      "type": "string",
      "required": true,
      "minLength": 32,
      "maxLength": 32
    },
    "api_endpoint": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "inactive", "error", "initializing"],
      "default": "inactive"
    },
    "last_sync_date": {
      "type": "datetime"
    },
    "last_sync_status": {
      "type": "enumeration",
      "enum": ["never", "running", "completed", "failed"],
      "default": "never"
    },
    "last_sync_message": {
      "type": "text"
    },
    "products_in_autorag": {
      "type": "integer",
      "default": 0
    },
    "sync_frequency": {
      "type": "enumeration",
      "enum": ["real-time", "daily", "manual"],
      "default": "real-time"
    },
    "company_context": {
      "type": "text"
    }
  }
}